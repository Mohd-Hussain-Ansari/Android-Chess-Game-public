<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.hussain.chess">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Chess">
        <activity
            android:name=".activities.online.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".activities.offline.PlayOfflineOptionActivity"
            android:exported="false" />
        <activity
            android:name=".activities.online.RoomDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.online.PlayWithFriendActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.online.PlayWithFriendOptionActivity"
            android:exported="false" />
        <activity
            android:name=".activities.online.PlayOnlineOptionActivity"
            android:exported="false" />
        <activity
            android:name=".activities.offline.SettingsActivity"
            android:exported="false"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".activities.online.PlayWithOtherActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.offline.ComputerGameActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.offline.ComputerSettingsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.offline.MatchSettingActivity"
            android:exported="false" />
        <activity
            android:name=".activities.offline.LoadSavedGameActivity"
            android:exported="false" /> <!-- set orientation  portrait for game activity -->
        <activity
            android:name=".activities.offline.PassAndPlayActivity"
            android:configChanges="orientation"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>